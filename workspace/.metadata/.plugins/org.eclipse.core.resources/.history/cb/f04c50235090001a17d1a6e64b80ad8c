package com.java.gui;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

class JColorChooserClass extends JFrame implements ActionListener {
	JButton jbutton = new JButton("색상 선택");
	JLabel jlabel1 = new JLabel("글자 색 변경");
	JLabel jlabel2 = new JLabel("색상 샘플");
	JLabel jlabel3 = new JLabel("색상 숫자 코드");
	Color color;
	
	public JColorChooserClass() {
		setLayout(new FlowLayout());
		
		add(jbutton);
		jbutton.addActionListener(this);
		
		jlabel1.setFont(new Font("나눔스퀘어", Font.BOLD, 32));
		add(jlabel1);
		
		jlabel2.setFont(new Font("나눔스퀘어", Font.BOLD, 32));
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
}

public class JColorChooserMainClass {

	public static void main(String[] args) {
		new JColorChooserClass();

	}

}
