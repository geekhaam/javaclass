package com.java.gui;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JColorChooser;
import javax.swing.JFrame;
import javax.swing.JLabel;

class JColorChooserClass extends JFrame implements ActionListener {
	JButton jbutton = new JButton("색상 선택");
	JLabel jlabel1 = new JLabel("글자 색 변경");
	JLabel jlabel2 = new JLabel("색상 샘플");
	JLabel jlabel3 = new JLabel("색상 숫자 코드");
	Color color;
	
	public JColorChooserClass() {
		setLayout(new FlowLayout(FlowLayout.CENTER, 50, 10));
		
		add(jbutton);
		jbutton.addActionListener(this);
		
		jlabel1.setFont(new Font("나눔스퀘어", Font.BOLD, 25));
		add(jlabel1);
		
		jlabel2.setFont(new Font("나눔스퀘어", Font.BOLD, 25));
		add(jlabel2);
		
		jlabel3.setFont(new Font("나눔스퀘어", Font.BOLD, 25));
		add(jlabel3);
		
		setSize(800, 200);
		setVisible(true);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == jbutton) {
			color = JColorChooser.showDialog(jbutton, "색상 선택", Color.green);
			jlabel1.setForeground(color); //글씨가 해당 색으로
			jlabel2.setText("선택한 색을 한 번 보자 " + color); //rgb 숫자로
			System.out.println(color);
		}
		
	}
}

public class JColorChooserMainClass {

	public static void main(String[] args) {
		new JColorChooserClass();

	}

}
